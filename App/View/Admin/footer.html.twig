<script type="text/javascript">
    $(function() {
        //bind event of the menu click
        $("#side-menu li").click(function() {
            var COOKIE_NAME = 'active';
            var type = 1;
            type = $(this).attr('tabindex');
            $.cookie(COOKIE_NAME, type, {
                path: '/',
                expires: 10
            });
            $('.side-menu li').remove("active");
            $(this).addClass("active");



        });

        //keep status of the menu
        var COOKIE_VALUE = $.cookie("active");
        COOKIE_VALUE ? COOKIE_VALUE : COOKIE_VALUE = 1;

        $('#side-menu li').each(function() {
            if ($(this).attr('tabindex') == COOKIE_VALUE) {
                $(this).addClass("active");
            }
        })

    });
</script>