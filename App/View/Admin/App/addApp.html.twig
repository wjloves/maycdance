<!DOCTYPE html>
<html lang="en">

<head>
    {% include "Admin/header.html.twig" %}
</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        {% include "Admin/toolbar.html.twig" %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Add App</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">
                            请填写平台详情
                            <a href="/admin/app" class="pull-right"> <button type="button" class="btn btn-primary btn-circle" title="返回"> <i class="fa fa-step-backward"></i></button> </a>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form" action="/app/addApp" method="post" id="myform">
                                       
                                        <div class="form-group">
                                            <label>平台名称</label>
                                            <input class="form-control" placeholder="App Name" name="data[name]" id="name">
                                        </div>
                                        <div class="form-group">
                                            <label>平台认证 Id</label>
                                            <input class="form-control" placeholder="App Id" name="data[app_id]" id="app_id">
                                        </div>
                                        <label>平台认证秘钥</label>
                                        <div class="form-group input-group">

                                            <input class="form-control" placeholder="Security" disabled id="disSecurity">
                                            <span class="input-group-btn">
                                               <button class="btn btn-default" id="setSceurity" type="button" title="生成秘钥"><i class="fa fa-spinner"></i>
                                               </button>
                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <label>平台代号</label>
                                            <input class="form-control" placeholder="Code" name="data[code]" id="code">
                                        </div>


                                        <input type="hidden" value="" name="data[app_security]" id="Security">
                                        <input type="hidden" value="" name="doSubmit" >
                                        <button type="button" id="doSubmit"  class="btn btn-default">Submit</button>
                                        <button type="reset" class="btn btn-default">Reset</button>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <script type="text/javascript">
            $("#setSceurity").click(function(){
                $.get('/app/Sceurity',function(msg){
                    $("#Security").val(msg);
                    $("#disSecurity").val(msg);
                })
            });
            $("#doSubmit").click(function(){
                    var circle = new ShowCircle();
                    if($.trim($("#name").val())==''){
                        circle.closeCircle("请输入平台名称");return;
                    }
                    if($.trim($("#app_id").val())==''){
                        circle.closeCircle("请输入认证ID");return;
                    }
                    if($.trim($("#Security").val())==''){
                        circle.closeCircle("请生成秘钥");return;
                    }
                    if($.trim($("#code").val())==''){
                        circle.closeCircle("请输入平台代号");return;
                    }
                    $("[name='setSubmit']").prop("disabled", true);
                    $("#myform").submit();
            });
    </script>
    {% include "Admin/footer.html.twig" %}

</body>

</html>
